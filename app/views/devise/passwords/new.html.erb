<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center">Forgot your password?</h2>
        </div>
        <div class="card-body">
          <form action="<%= password_path(resource_name) %>" method="post" class="form-horizontal">
            <%= csrf_meta_tags %>

            <div class="form-group">
              <label for="user_email">Email</label>
              <input autofocus="autofocus" autocomplete="email" class="form-control" required="required" type="email" value="" name="user[email]" id="user_email" />
            </div>

            <div class="form-group">
              <input type="submit" name="commit" value="Send me reset password instructions" class="btn btn-primary btn-block" />
            </div>
          </form>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
