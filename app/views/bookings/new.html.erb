<div class="container">
  <div class="card">
    <div class="card-header">
      <h2>Request to stay at <%= @flat.address%></h2>
    </div>
    <div class="card-body">
      <%= simple_form_for [@flat, @booking], data: { controller: 'flatpickr' } do |f|%>
        <div class="form-group form-inputs">
          <%= f.input :start_time, as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
        </div>
        <div class="form-group form-inputs">
          <%= f.input :end_time, as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Create booking", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

  <style>
    .container {
      max-width: 800px;
      margin: 0 auto;
      margin-top: 50px;
    }
    .card {
      border: 1px solid #ccc;
      padding: 20px;
    }
  </style>
