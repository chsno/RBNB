<div class="container">
  <div class="card">
    <div class="card-header">
      <h2>New booking for <%= @flat.address%></h2>
    </div>
    <div class="card-body">
      <%= simple_form_for [@flat, @booking], html: { class: 'form-horizontal' } do |f| %>
        <div class="form-group form-inputs">
          <%= f.input :start_date, as: :string, input_html: { data: { flatpickr_target: "startDate" } } %>
        </div>
        <div class="form-group form-inputs">
          <%= f.input :end_time, as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Create booking", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

